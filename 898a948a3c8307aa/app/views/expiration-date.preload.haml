.payment-svg-font-icons-arrow-down.select.select-date.select-month.input-short
  %select(name="expirationMonth" id="expirationMonth" ng-model="expirationDate.month" ng-options="month for month in [] | range:1:12")
    %option(value="" selected disabled) {{'payment.month' | translate}}
.payment-svg-font-icons-arrow-down.select.select-date.select-year.input-short
  %select(name="expirationYear" id="expirationYear" ng-model="expirationDate.year" ng-options="year for year in [] | range:{{expirationDate.getCurrentYear()}}:{{expirationDate.getCurrentYear()}}+13")
    %option(value="" selected disabled) {{'payment.year' | translate}}
